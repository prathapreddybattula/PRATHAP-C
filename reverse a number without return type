#include<iostream>
using namespace std;
int rev(int a)
{
    int rem,rev=0;
    while(a!=0)
    {
        rem=a%10;
        rev=rev*10+rem;
        a/=10;
    }
    cout<<"\nreversed number :"<<rev;
}
int main()
{
    int n;
    cout<<"/nenter the number to reverse:";
    cin>>n;
    rev(n);
    return 0;
}


output:
enter the number number to reverse: 1234
reversed number: 4321
