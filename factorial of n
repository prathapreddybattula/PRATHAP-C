#include<iostream>
using namespace std;
int main()
{
    int n;
    long factorial =1.0;
    cout<<"enter a positive integer:";
    cin>>n;
    if(n<0)
    cout<<"error!factrial of a negative number doesn`t exist.";
    else{
        for(int i=1;i<=n;++i)
        factorial*=i;
    }
    cout<<"factorial of "<<n<<"="<<factorial;

}
return 0;
}


outputL:
enter the positive number 5
factorial of 5!=120
